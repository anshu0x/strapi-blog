{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "author": {
      "type": "string",
      "required": true
    },
    "label": {
      "type": "string",
      "required": true,
      "default": "general"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "categoryColor": {
      "type": "enumeration",
      "enum": [
        "green",
        "blue",
        "orange",
        "purple",
        "pink"
      ],
      "required": true,
      "default": "pink"
    },
    "keywords": {
      "type": "text"
    }
  }
}
